{
  "name": "shuimo-core",
  "version": "0.1.0",
  "private": true,
  "description": "A procedural Chinese landscape painting generation library",
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter @shuimo/core dev",
    "playground": "pnpm --filter @shuimo/playground dev",
    "build": "pnpm --filter @shuimo/core build",
    "build:all": "pnpm -r --filter \"./packages/**\" build",
    "test": "pnpm --filter @shuimo/core test",
    "lint": "eslint . --ext ts,tsx",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "upgrade": "pnpm dlx taze -r -w major --install"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "eslint": "^9.39.1",
    "prettier": "^3.6.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=10.0.0"
  }
}