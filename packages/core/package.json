{
  "name": "@shuimo/core",
  "type": "module",
  "version": "0.1.0",
  "description": "Core library for procedural Chinese landscape painting generation",
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs"
    },
    "./foundation": {
      "types": "./dist/foundation.d.mts",
      "import": "./dist/foundation.mjs"
    },
    "./elements": {
      "types": "./dist/elements.d.mts",
      "import": "./dist/elements.mjs"
    },
    "./drawing": {
      "types": "./dist/drawing.d.mts",
      "import": "./dist/drawing.mjs"
    }
  },
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc --noEmit && tsdown",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "dependencies": {
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.19.25",
    "@types/uuid": "^10.0.0",
    "@vitest/ui": "^4.0.14",
    "jsdom": "^27.2.0",
    "tsdown": "0.17.0-beta.1",
    "typescript": "^5.9.3",
    "vite": "^7.2.4",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.14"
  }
}
