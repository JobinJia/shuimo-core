{
  "name": "@shuimo/core",
  "version": "0.1.0",
  "description": "Core library for procedural Chinese landscape painting generation",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./foundation": {
      "types": "./dist/foundation/index.d.ts",
      "import": "./dist/foundation/index.js"
    },
    "./elements": {
      "types": "./dist/elements/index.d.ts",
      "import": "./dist/elements/index.js"
    },
    "./renderer": {
      "types": "./dist/renderer/index.d.ts",
      "import": "./dist/renderer/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "dependencies": {
    "@shuimo/shanshui": "workspace:*",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.19.25",
    "@types/uuid": "^10.0.0",
    "@vitest/ui": "^4.0.13",
    "jsdom": "^27.2.0",
    "typescript": "^5.9.3",
    "vite": "^7.2.4",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.13"
  }
}
