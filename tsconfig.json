{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],

    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "bundler",

    "paths": {
      "@shuimo/core": ["./packages/core/src/index.ts"],
      "@shuimo/core/*": ["./packages/core/src/*"]
    },
    "resolveJsonModule": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "sourceMap": true,

    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["packages/*/src/**/*"],
  "exclude": ["node_modules", "dist", "**/node_modules", "**/dist"]
}
